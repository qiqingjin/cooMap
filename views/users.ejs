<%- contentFor('userPage') %>
<link rel="stylesheet" type="text/css" href="../css/users.css">
<script type="text/javascript">
    window.SOCKET = window.SOCKET || io();
    window.CLIENT = window.CLIENT || {};
    window.onbeforeunload = function(){
        window.SOCKET.emit('client user off', document.getElementsByTagName('h1')[0].innerHTML);
        window.SOCKET.close();
        var start = Date.now();
        var end = Date.now();
        while (end - start < 3000) {
            end = Date.now();
        }
    }
</script>
<h1><%= name.toUpperCase() %></h1>

<div id="extent" data-extent="<%= extent %>" display="none"></div>
<div id="point" data-point="<%= point %>" display="none"></div>
<div id="line" data-line="<%= line %>" display="none"></div>
<div id="polygon" data-polygon="<%= polygon %>" display="none"></div>
<div id="layer" data-layer="<%= layer %>" display="none"></div>

<div id="viewContainer">
    <div id="outputMessages"></div>
    <div id="currentUsersNum"><!--online users: <span> <%= num %> </span> !--></div>
    <div id="currentUsersInfo"></div>
    <div id="sendMessageContainer">
        <input type="text" id="inputMessage">
        <button id="sendMessage">send</button>
    </div>
</div>

<div id="line-button" class="esri-widget-button esri-widget esri-interactive" title="Draw polyline">
    <span class="esri-icon-polyline"></span>
</div>
<div id="draw-polygon" class="esri-widget-button esri-widget esri-interactive" title="Draw polygon">
    <span class="esri-icon-polygon"></span>
</div>
<div id="draw-point" class="esri-widget-button esri-widget esri-interactive" title="Draw point">
    <span class="icon-point"></span>
</div>
<div id="draw-layer" class="esri-widget-button esri-widget esri-interactive" title="Draw layer">
    <span class="icon-layer"></span>
</div>
<div id="draw-redo" class="esri-widget-button esri-widget esri-interactive" title="Clear line, polygon and point">
    <span class="esri-icon-rotate"></span>
</div>

<input type="text" placeholder="https://services.arcgis.com/V6ZHFr6zdgNZuVG0/arcgis/rest/services/Landscape_Trees/FeatureServer/0" id="layer-service" title="Input the url of featurelayer service">

<script type="text/javascript" src="../js/users.js"></script>